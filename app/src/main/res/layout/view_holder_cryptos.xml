<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/subtitle_status_cell_wrapper"
    android:paddingTop="@dimen/twelve_dp"
    android:paddingBottom="@dimen/twelve_dp"
    android:clickable="true"
    android:focusable="true"
    android:background="?attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/ten_dp"
        android:layout_marginEnd="@dimen/ten_dp">

        <!-- first row -->
        <TextView
            android:id="@+id/dashboard_cell_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textAlignment="textEnd"
            android:layout_alignParentEnd="true"
            android:text="status Text"
            android:textSize="@dimen/sp17"
            android:textColor="@color/colorBlack" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dashboard_cell_label"
            android:text="label text"
            android:textSize="@dimen/sp17"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:layout_toStartOf="@id/dashboard_cell_status"/>

        <!-- second row -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dashboard_cell_subtitle"
            android:text="subtitle text"
            android:layout_below="@id/dashboard_cell_label"
            android:layout_alignStart="@id/dashboard_cell_label"
            android:layout_toStartOf="@id/dashboard_cell_thirdtitle"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dashboard_cell_thirdtitle"
            android:text="third title text"
            android:textAlignment="textEnd"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_below="@id/dashboard_cell_status"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

</RelativeLayout>